rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files, as they are likely public assets like logos.
    match /{allPaths=**} {
      allow read;
    }

    // Only allow authenticated users to write to the 'club-logos' directory.
    match /club-logos/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
